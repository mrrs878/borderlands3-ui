{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "exclude": ["**/__tests__"]
}
